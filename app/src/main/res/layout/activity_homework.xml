<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homework"
    android:background="@color/white"
    android:layout_gravity="start"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="0dp"
        android:background="@drawable/header_background"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/bars_solid" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:ems="10"
                android:text="@string/headerHomework"
                android:textSize="35sp" />

        </LinearLayout>


        <!--
        (String description, Lecture lecture, String name, int pageNumber, double progress, Date dueDate)
        -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/text_lecture"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background">

            <Spinner
                android:id="@+id/spinner_lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autofillHints="lecture"
                android:dropDownWidth="match_parent"
                android:padding="13dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_new_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="lecture"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="@string/text_new_lecture"
            android:inputType="text"
            android:visibility="gone"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="title"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="@string/text_title"
            android:inputType="text"
            android:padding="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            >

            <EditText
                android:id="@+id/edit_text_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:autofillHints="date"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="@string/text_date"
                android:inputType="date"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="12dp" />

            <EditText
                android:id="@+id/edit_text_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:autofillHints="page"
                android:background="@drawable/input_background"
                android:ems="10"
                android:hint="@string/text_page_num"
                android:inputType="number"
                android:padding="12dp" />

        </LinearLayout>


        <EditText
            android:id="@+id/edit_text_text_description"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:autofillHints="description"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="@string/text_description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="10dp" />


        <TextView
            android:id="@+id/seek_bar_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/text_progress"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seek_bar_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:max="10"
            android:min="0"
            android:progress="0" />

        <Button
            android:id="@+id/btn_add_homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/dhbw_red"
            android:text="@string/text_add"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>